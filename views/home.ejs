<%- include("partials/header")  %>
<nav class="navbar-light" aria-label="breadcrumb" style="background-color: #e3f2fd;">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Home</li>
    </ol>
</nav>
<div class="container">

    <div class="row">
        <div class="offset-sm-2 col-sm-8">
            <div class="card text-center" style="box-shadow:0 2rem 6rem rgba(0,0,0,0.3)">
                <div class="card-header h3">
                    Search
                </div>
                <div class="card-body">
                    <form action="/search/" id="contactForm" method="POST" role="form">

                        <div class="input-group input-group-lg">

                            <input type="text" id="searchbar" name="filterbar" class="form-control" aria-label="Large"
                                aria-describedby="inputGroup-sizing-sm">

                            <div class="input-group-append">

                                <button type="submit" class="input-group-text"><svg class="bi bi-search" width="1em"
                                        height="1em" viewBox="0 0 16 16" fill="currentColor"
                                        xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd"
                                            d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z" />
                                        <path fill-rule="evenodd"
                                            d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
                                    </svg></button>
                            </div>
                        </div>

                </div>
                <div class="card-footer text-muted">
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="filtername" name="filter" value="a" class="custom-control-input"
                            checked>
                        <label class="custom-control-label" for="filtername">By Name</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="filternumber" name="filter" value="b" class="custom-control-input">
                        <label class="custom-control-label" for="filternumber">By Phone Number</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="filteremail" name="filter" value="c" class="custom-control-input">
                        <label class="custom-control-label" for="filteremail">By Email</label>
                    </div>
                </div>
                </form>
            </div>
            <div class="accordion" id="accordionExample" style="margin-top: 16px;">
                <% contact.forEach(function(contact){ %>
                <div class="card contact-list">
                    <div class="card-header" id="headingOne">
                        <h2 class="mb-0">
                            <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse"
                                data-target="#<%= 'A'+ contact._id%>" aria-expanded="false" aria-controls="collapseOne">
                                <%= contact.contactName %>
                                <i class="fa fa-chevron-down float-right" aria-hidden="true"></i>
                            </button>
                        </h2>

                    </div>

                    <div id="<%= 'A'+ contact._id %>" class="collapse" aria-labelledby="headingOne"
                        data-parent="#accordionExample">
                        <div class="card-body">
                            <div class="row" style="margin: 0px 0px 10px 0px">
                                <div class="col-sm-6">Date of Birth: <%= contact.contactDOB %></div>
                                <div class="col-sm-6">
                                    <button onclick="location.href='/contact/<%= contact._id %>/edit'" type="button"
                                        class="btn btn-info ">Edit</button>
                                    <button onclick="location.href='/delete/<%= contact._id %>'" type="button"
                                        class="btn btn-danger">Remove</button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <ul class="list-group">
                                        <li class="list-group-item active">Phone</li>
                                        <% contact.contactPhone
                                        .forEach(function(phone){ %>
                                        <% if(phone.length > 0){ %>
                                        <li class="list-group-item"><%= phone %></li>
                                        <% } %>
                                        <% }); %>

                                    </ul>
                                </div>

                                <div class="col-sm-6">
                                    <ul class="list-group">
                                        <li class="list-group-item active">Email</li>
                                        <% contact.contactEmail
                                        .forEach(function(email){ %>
                                        <% if(email.length > 0){ %>
                                        <li class="list-group-item"><%= email %></li>
                                        <% } %>
                                        <% }); %>

                                    </ul>
                                </div>
                            </div>



                        </div>
                    </div>
                </div>

                <% }); %>

            </div>

            <nav>
                <ul class="pagination justify-content-center" style="margin-top: 40px;">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="/?page=1">1</a></li>
                    <li class="page-item"><a class="page-link" href="/?page=2">2</a></li>
                    <li class="page-item"><a class="page-link" href="/?page=3">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>

        </div>
    </div>
    <section class="FAB">

        <div class="FAB__action-button">
            <i onclick="location.href='/addContact'" class="action-button__icon material-icons">add</i>
        </div>
    </section>
</div>


<%- include("partials/footer")  %>